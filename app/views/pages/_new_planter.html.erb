<%= simple_form_for new_planter, remote: true do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add a planter</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <p>Name:</p>
    <%= f.input :name, placeholder: 'Kitchen Planter' %>
    <p>Sun exposure (sun / part sun / shadow):</p>
    <%= f.input :sun, as: :radio_buttons, collection: ['Full sun', 'Part sun', 'Full shade'], wrapper: :vertical_collection_inline %>
    <p>Planter size (pot / medium / large):</p>
    <%= f.input :size, as: :radio_buttons, collection: ['Pot', 'Small planter', 'Large planter' ], wrapper: :vertical_collection_inline %>
    <p>Notifications colour:</p>
    <%= f.input :color, as: :radio_buttons, collection: ['#ff6978', '#b1ede8', '#ffe1a8', '#dbb1bc'], wrapper: :vertical_collection_inline %>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Submit', class: 'btn btn-primary ml-2' %>
  </div>
<% end %>

