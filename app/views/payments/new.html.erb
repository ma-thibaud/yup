<div class="container payment-container d-flex justify-content-center">
  <div class="card col-10 col-lg-6">
    <div class="card-body">
      <h1 class="text-center">Checkout summary</h1>
      <hr class="mb-3">
      <h3 class="mt-3">Purchase of <strong>Order #<%= @order.id %></strong> for <strong><%= @order.amount_cents %> â‚¬</strong></h3>
      <button id="pay" class="btn btn-primary mt-3">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
